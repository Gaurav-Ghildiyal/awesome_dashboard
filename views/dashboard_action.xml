<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Client Action to open dashboard -->
    <record id="action_awesome_dashboard" model="ir.actions.client">
        <field name="name">Sales Dashboard</field>
        <field name="tag">awesome_dashboard.dashboard</field>
    </record>

    <!-- Optional: Embed dashboard above Sale Order tree -->
    <record id="sale_order_form_inherit_dashboard" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.dashboard</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <div class="o_dashboard_container">
                    <t t-call="awesome_dashboard.AwesomeDashboard"/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
